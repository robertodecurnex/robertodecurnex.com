<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 <title>thinking out loud [...]</title>
 <link href="http://robertodecurnex.github.com/atom.xml" rel="self"/>
 <link href="http://robertodecurnex.github.com/"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://robertodecurnex.github.com/</id>
 <author>
   <name>Roberto Decurnex</name>
   <email>nex.development@gmail.com</email>
 </author>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://robertodecurnex.github.com{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://robertodeurnex.github.com{{ post.id }}</id>
   <content type="html">{{ post.content | xml_escape }}</content>
 </entry>
 {% endfor %}
 
</feed>
